{
	"compilerOptions": {
		"alwaysStrict": true,
		"baseUrl": "src",
		"declaration": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"lib": [
			"es6"
		],
		"module": "commonjs",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"outDir": "./lib",
		"rootDir": "./src",
		"strictNullChecks": true,
		"target": "es6",
	},
	"include": [
		"src/**/*",
	],
}
